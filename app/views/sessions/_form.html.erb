<%= form_tag login_path do %>
  <div class="input-field col s12 m6">
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div class="input-field col s12 m6">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag :sign_in, class: "waves-effect waves-light btn" %>
  <%= render 'shared/button', text: "Sign Up", path: new_user_path %>
<% end %>
